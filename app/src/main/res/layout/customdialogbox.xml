<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the number of tickets"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/tv_selectTicket"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radioallgrp"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mirpur"
                        android:id="@+id/radiomirpur"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wari"
                        android:id="@+id/radiowari"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uttara"
                        android:id="@+id/radioutt"
                        />

                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="7"
                android:layout_marginBottom="7dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content"
                    android:text="Age 0.9year"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"

                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_minus"
                    android:id="@+id/btn_minus_infant"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_count_infant"
                    android:textAlignment="center"

                    />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbackground_add"
                    android:src="@drawable/ic_add"
                    android:id="@+id/btn_add_infant"
                    />

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="7" android:layout_marginBottom="7dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="Age 1-10 year"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"

                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/btn_background"
                android:src="@drawable/ic_minus"
                android:id="@+id/btn_minus_kids"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="3dp"
                android:id="@+id/tv_count_kids"
                android:textAlignment="center"

                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/btnbackground_add"
                android:src="@drawable/ic_add"
                android:id="@+id/btn_add_kids"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="7"
                android:layout_marginBottom="7dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content"
                    android:text="Gardian"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"

                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_minus"
                    android:id="@+id/btn_minus_gardian"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_count_gardian"
                    android:textAlignment="center"

                    />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbackground_add"
                    android:src="@drawable/ic_add"
                    android:id="@+id/btn_add_gardian"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="7"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content"
                    android:text="Socks"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"

                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_minus"
                    android:id="@+id/btn_minus_soks"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_count_socks"
                    android:textAlignment="center"

                    />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbackground_add"
                    android:src="@drawable/ic_add"
                    android:id="@+id/btn_add_socks"
                    />

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_confirm_background"
                android:layout_marginTop="15dp"
                android:text="Confirm"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:elevation="8dp"
                android:id="@+id/confirm_ticket_dialog"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>