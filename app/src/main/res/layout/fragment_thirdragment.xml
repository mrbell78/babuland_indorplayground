<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.babuland.babuland1.fragment.Thirdragment"
    android:layout_centerVertical="true"
    >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout_shake"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="45dp"
            android:textStyle="bold"
            android:text="You already answered this question"
            android:textColor="#FB8C00"
            android:id="@+id/anserstatus"
            android:visibility="visible"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the question "
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/questionid"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="A select ooption "
                    android:textSize="19sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:id="@+id/buttona"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="B select ooption "
                    android:textSize="19sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:id="@+id/buttonb"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="C select ooption "
                    android:textSize="19sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:id="@+id/buttonc"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="D select ooption "
                    android:textSize="19sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:id="@+id/buttond"
                    />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAlignment="center"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_time"
            android:layout_marginBottom="20dp"
            android:textColor="#43A047"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="-73dp"
            android:id="@+id/tv_Correctans"
            android:layout_marginBottom="20dp"
            android:textColor="#43A047"
            android:visibility="invisible"

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="7dp"
            android:elevation="10dp"
            app:cardElevation="7dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rank"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="#00897B"
                android:id="@+id/next"
                />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>