                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:padding="15dp"
                    android:layout_margin="15dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:foreground="?android:attr/selectableItemBackground"
