                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:padding="15dp"
                    android:layout_margin="15dp"
                    android:id="@+id/cd1"
