<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context="com.example.babuland1.activity.WelcomeanimActivity">



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/babulandlogo"
        android:id="@+id/imgbabuland"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Welcome to Babuland"
        android:layout_below="@+id/imgbabuland"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_titlebabuland"
        />

        />
</RelativeLayout>