<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Say something about us"
        android:textSize="22sp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        />
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardElevation="15dp"
       android:elevation="20dp"


       >


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="center"


           >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What could we Improved?"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"

        />


           >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:weightSum="2"
              android:orientation="horizontal"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"

              >




                  <Button
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Wash Room"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:background="@drawable/background_dialogdbtn"
                      android:textAllCaps="false"
                      android:layout_marginRight="30dp"
                      android:elevation="10dp"
                      android:textColor="@android:color/white"
                      android:id="@+id/btn_washroom"
                      />




                  <Button
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Pga Service"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:background="@drawable/background_dialogdbtn"
                      android:textAllCaps="false"
                      android:elevation="10dp"
                      android:layout_marginRight="10dp"
                      android:textColor="@android:color/white"
                      android:id="@+id/btn_pgaservice"
                      />








          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:weightSum="2"
              android:orientation="horizontal"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"


              >


                  <Button
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Food Quality"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:background="@drawable/background_dialogdbtn"
                      android:textAllCaps="false"
                      android:layout_marginRight="30dp"
                      android:elevation="10dp"
                      android:textColor="@android:color/white"
                      android:id="@+id/foodquality"
                      />




                  <Button
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="Hygiene"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:background="@drawable/background_dialogdbtn"
                      android:textAllCaps="false"
                      android:elevation="10dp"
                      android:layout_marginRight="10dp"
                      android:textColor="@android:color/white"
                      android:id="@+id/hygin"
                      />








          </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"

               android:orientation="horizontal"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="20dp"

               >


               <Button
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="Others"
                   android:textAlignment="center"
                   android:textSize="15sp"
                   android:background="@drawable/background_dialogdbtn"
                   android:textAllCaps="false"
                   android:layout_marginRight="30dp"
                   android:elevation="10dp"
                   android:textColor="@android:color/white"
                   android:id="@+id/other"
                   />












           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:visibility="invisible"
               android:id="@+id/noteview"
               android:layout_marginTop="-140dp"

               >


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:textSize="17sp"
                   android:hint="your comment here"
                   android:textAlignment="center"
                   android:id="@+id/edt_comment"
                   android:background="@drawable/background_edittxt_dialog"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"


                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:weightSum="6"
                   android:padding="10dp"
                   >

                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="2"
                       app:cardElevation="5dp"
                       android:elevation="15dp"
                       >

                       <Button
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Cancel"
                           android:textAllCaps="false"
                           android:background="#CAC9C9"
                           android:id="@+id/btn_dialogbox_main_cancel"
                           android:textColor="@android:color/holo_red_light"
                           android:elevation="15dp"
                           />
                   </androidx.cardview.widget.CardView>


                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="2"
                       app:cardElevation="5dp"
                       android:elevation="15dp"
                       android:layout_marginLeft="45dp"
                       >
                       <Button
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:text="Ok"
                           android:textAllCaps="false"
                           android:background="@color/colorPrimary"
                           android:id="@+id/btn_dialogbox_main_ok"
                           android:textColor="@android:color/white"
                           android:elevation="15dp"
                           />


                   </androidx.cardview.widget.CardView>
               </LinearLayout>


           </LinearLayout>







       </LinearLayout>



   </androidx.cardview.widget.CardView>



</LinearLayout>