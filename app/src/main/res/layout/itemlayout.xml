    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"

        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"

           >

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <ImageView
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:src="@drawable/choumin"
                   android:scaleType="centerCrop"
                   android:id="@+id/image_show"

                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Choumin"
                   android:layout_gravity="center"
                   android:layout_marginTop="3dp"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:textColor="@color/colorPrimary"
                   android:id="@+id/heading"
                   />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="vertical"

               >
               <TextView
                   android:layout_width="140dp"
                   android:layout_height="wrap_content"
                   android:text="120tk"
                   android:textStyle="bold"
                   android:textSize="17sp"
                   android:textColor="@android:color/white"
                   android:background="@drawable/text_backgroudn_drawable"
                   android:padding="7dp"
                   android:id="@+id/content"
                   android:layout_marginTop="5dp"
                   android:textAlignment="center"
                   android:layout_marginStart="60dp"
                   android:layout_marginEnd="3dp"

                   />
               <RatingBar
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:numStars="5"
                   style="@style/Widget.AppCompat.RatingBar.Small"
                   android:layout_marginLeft="55dp"
                   android:layout_marginTop="10dp"
                   android:id="@+id/ratingbarstr"
                   android:padding="10dp"
                   android:isIndicator="false"
                   android:stepSize="1"

                   />
               <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="60dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="120"
                   android:textColor="@android:color/darker_gray"
                   android:textSize="15sp"
                   android:layout_marginRight="15dp"
                   android:id="@+id/num_like"

                   />

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_favorite_unlike"
                   android:id="@+id/like_unlike"
                   android:scaleType="centerCrop"
                   />

           </LinearLayout>
           </LinearLayout>


       </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>