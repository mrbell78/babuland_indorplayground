<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ForthFragment">








                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:id="@+id/forth_viewpager"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    ></androidx.viewpager.widget.ViewPager>




      <!--  <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            >
        </androidx.recyclerview.widget.RecyclerView>-->






            <LinearLayout
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_below="@+id/forth_viewpager"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:orientation="horizontal"

                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#1faa00"
                            android:orientation="vertical"
                            android:id="@+id/babulandpoint_liniarid"

                            android:layout_margin="5dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:focusableInTouchMode="true"


                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:src="@drawable/coin"
                                android:padding="10dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:background="#64dd17"
                                android:text="My Babuland points"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:id="@+id/babulandpoint_tvid"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#a30000"
                            android:orientation="vertical"

                            android:layout_margin="5dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:focusableInTouchMode="true"


                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="190dp"

                                android:src="@drawable/ghost"
                                android:padding="10dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:background="#dd2c00"
                                android:text="halloween comming 1day left"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"

                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#bb002f"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:id="@+id/byTicket"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/tickets"
                            android:padding="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f50057"
                            android:text="Buy Ticket"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#90cc00"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:id="@+id/fooditem"

                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/baseline_fastfood"
                            android:padding="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#c6ff00"
                            android:text="Food Item"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




</RelativeLayout>