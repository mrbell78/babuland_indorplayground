<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.babuland.babuland.activity.ChildprofileeditActivity">

    <include layout="@layout/maintoolbar"
        android:id="@+id/mainToolbar"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/mainToolbar"
        android:scaleType="fitXY"
        android:src="@drawable/babuland"
        android:id="@+id/babypropicid"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/babypropicid"
        android:orientation="vertical"
        android:background="#F7353434"

        >


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="15dp"
            android:elevation="20dp"
            android:background="@drawable/childname_border"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="1dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="Abrar Fahad"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_childname"




                />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"



            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3.5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="Date Of Birdth "


                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="19sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="18-02-19"
                    android:textAlignment="center"
                    android:id="@+id/childdob"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3.5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="19sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="Gender"


                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textSize="19sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="Girl"
                    android:textAlignment="center"
                    android:id="@+id/child_gender"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3.5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="19sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="Class"


                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textSize="19sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:id="@+id/childclass"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3.5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="19sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="School"


                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textSize="19sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="Udon school"
                    android:textAlignment="center"
                    android:id="@+id/childschool"

                    />


            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
           android:layout_gravity="center"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Next Birdthday"
                android:textAlignment="center"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:text="monday - 21 nov 2019"

                />


        </LinearLayout>




    </LinearLayout>


</RelativeLayout>